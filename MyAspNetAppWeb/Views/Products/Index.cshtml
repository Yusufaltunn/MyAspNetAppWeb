@{

    ViewData["Title"] = "Index";

}
@model List<ProductViewModel>
<h1>ürünler</h1>

@if(TempData["status"]!=null)
{
    <div class="alert alert-primary" role="alert">
@TempData["status"]

</div>
}

<a asp-controller="products" asp-action="add">ürün ekle</a>
<table class="table">


    <thead>
        <tr>
            <th>Id</th>
            <th>isim</th>
            <th>fiyat</th>
            <th>Stok</th>
            <th>Renk</th>
            <th>Yayınlansın mı ?</th>
            <th>süre(Ay)</th>
            <th>Açıklama</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>
                    @(item.IsPublish ? "Evet " : "hayır")
                  


                </td>
                <td>@item.Expire</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 20)
                    {
                        @item.Description.Substring(0, 20)

                        <text>...</text>
                    }
                    else
                    {
                        @item.Description
                    }
                </td>
                

                <td>
                    <a asp-controller="products "
                       asp-action="remove" asp-route-id="@item.Name">
                        Sil
                    </a>


                    <a asp-controller="products "
                       asp-action="update" asp-route-id="@item.Id">
                        güncelleme
                    </a>

                </td>
            </tr>
        }

    </tbody>

</table>

