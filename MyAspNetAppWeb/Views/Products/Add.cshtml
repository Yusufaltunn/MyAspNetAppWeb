@{
    ViewData["Title"] = "Add";

}

@model Product
<h1>ürün ekleme</h1>

<form asp-controller="Products" asp-action="Add" method="post">

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün ismi :</label>
        <input class="form-control"  asp-for="Name" >

    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Fiyatı :</label>
        <input class="form-control" asp-for="Price">
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Stok : </label>
        <input class="form-control" asp-for="Stock">
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Ürün Rengi</label>
        <input class="form-control" asp-for="Color">
    </div>

    <div class="form-check">
        <input  class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" for="flexCheckDefault">
        Yayınlansın mı?
        </label>

        @foreach  (var item in @ViewBag.Expire as List<string>)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="Expire" value="@item">
                <label class="form-check-label" for="flexRadioDefault1">
                   @item 
                    </label>
            </div>


        }
    </div>



    <button class="btn btn-primary" type="submit">Ürün Kaydet</button>



</form>